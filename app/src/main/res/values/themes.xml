<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MobileBank" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MobileBank.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.MobileBank.AppWidgetContainer" parent="Theme.MobileBank.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>